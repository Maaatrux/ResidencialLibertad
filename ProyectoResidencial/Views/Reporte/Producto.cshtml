
@{
    ViewBag.Title = "Reporte Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
    <li class="breadcrumb-item active">Reportes Productos</li>
</ol>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-chart-line"></i> Reportes Productos
    </div>
    <div class="card-body">
        @using (Html.BeginForm("ExportarProductos", "Reporte", FormMethod.Post))
        {
            <div class="row">
                <div class="card col-md-11 mt-2 mb-2" style="margin: auto auto">
                    <div class="col-md-12 mb-4">
                        <div class="row g-2">
                            <div class="col-3">
                                <label for="cboHabitacion">Estado:</label>
                                <select class="form-select" id="cboEstado" name="estado">
                                    <option value="2">Todos</option>
                                    <option value="1">Activo</option>
                                    <option value="0">No Activo</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="txtRut">Fecha entrada:</label>
                                <input type="text" class="form-control" id="txtFechaInicio" name="fechaInicio" autocomplete="off" />
                            </div>

                            <div class="col-md-3">
                                <label for="cboTipoDocumento">Fecha salida:</label>
                                <input type="text" class="form-control" id="txtFechaSalida" name="fechaSalida" autocomplete="off" />
                            </div>

                            <div class="col-md-3 mt-auto">
                                <button type="submit" class="btn btn-success"><i class="fas fa-cloud-download-alt"></i> Descargar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("input[name=fechaInicio]").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', new Date());
            $("input[name=fechaSalida]").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', new Date());
        })
    </script>
}